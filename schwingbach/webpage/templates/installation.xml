<xml xmlns:py="http://genshi.edgewall.org/" >
<form>
	<span py:content="'Add' if action='add' else 'Remove'" />
	<select id="selectinstrument" name="instrument" style="width: 10em;"/>
	at date:
	<input id="actiontime" name="time" type="text" class="date" style="width: 10em;" value="${date}" />
	<input type="button" 
		onclick="$.post('/site/instrument',{siteid:${site.id},
											instrumentid:$('#selectedinstrument').val(),
											date:$('actiontime').text(),
											action:${action},
											installationid:${installationid}})" />
</form> 

</xml>